# Azure VM Production Configuration
# Copy this to your Azure VM and update values as needed

# Server Configuration
HOST=0.0.0.0
PORT=8001
WORKERS=4
RELOAD=false

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO

# CORS Configuration for Azure
ALLOWED_ORIGINS=["https://your-azure-domain.com", "https://localhost:8001", "http://localhost:8001"]

# Security
SECRET_KEY=your-secure-secret-key-here
HTTPS_ENFORCED=true

# AI Configuration
GROQ_API_KEY=your-groq-api-key-here

# Database (if using MongoDB Atlas)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/anomaly_detection

# Azure VM Specific
# Update these based on your Azure VM configuration
AZURE_VM_SIZE=Standard_D4s_v3
AZURE_LOCATION=East US
AZURE_RESOURCE_GROUP=anomaly-detection-rg

# Network Configuration
PUBLIC_IP=your-azure-public-ip
DOMAIN_NAME=your-azure-domain.com

# SSL Certificate (for HTTPS)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Monitoring and Logging
ENABLE_PROMETHEUS=true
LOG_TO_AZURE_MONITOR=false
AZURE_MONITOR_CONNECTION_STRING=your-azure-monitor-connection-string
