# Environment Configuration for Anomaly Detection System
# Copy this to .env and fill in your values

# Environment (development, staging, production)
ENV=production
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8001

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-very-secure-secret-key-here
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# AI API Keys
GROQ_API_KEY=your-groq-api-key-here

# Database (MongoDB)
DATABASE_URL=mongodb://localhost:27017/anomaly_detection

# File Storage Paths
UPLOAD_DIR=uploaded_videos
ANOMALY_DIR=anomaly_frames
RECORDED_DIR=recorded_videos

# AI Detection Thresholds (adjust for your environment)
SCENE_THRESHOLD=0.70
POSE_THRESHOLD=0.90
AUDIO_THRESHOLD=0.50

# Performance Settings
MAX_PIPELINE_CARDS=10
FRAME_PROCESSING_RATE=3

# Logging
LOG_LEVEL=INFO
