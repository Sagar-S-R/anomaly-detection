{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://your-backend-app.azurewebsites.net",
    "REACT_APP_WS_URL": "wss://your-backend-app.azurewebsites.net"
  },
  "build": {
    "env": {
      "REACT_APP_API_URL": "https://your-backend-app.azurewebsites.net",
      "REACT_APP_WS_URL": "wss://your-backend-app.azurewebsites.net"
    }
  }
}
