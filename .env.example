# Environment Variables for Anomaly Detection System
# Copy this file to .env and fill in your values

# Groq AI API Configuration
GROQ_API_KEY=your_groq_api_key_here

# MongoDB Configuration
MONGODB_URL=mongodb://admin:password123@mongo:27017
DATABASE_NAME=anomaly_detection
ANOMALIES_COLLECTION=anomalies
SESSIONS_COLLECTION=sessions
USERS_COLLECTION=users
USER_SESSIONS_COLLECTION=user_sessions
TEST_COLLECTION=test_collection
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123

# Application Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DASHBOARD_PORT=8001
FRONTEND_PORT=3000

# API URLs (for frontend)
REACT_APP_API_URL=http://localhost:8000
REACT_APP_DASHBOARD_URL=http://localhost:8001

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-here
CORS_ORIGINS=http://localhost:3000,http://localhost:8001

# Logging
LOG_LEVEL=INFO

# File Upload Limits
MAX_FILE_SIZE=100MB
ALLOWED_VIDEO_FORMATS=mp4,avi,mov,mkv

# AI Model Configuration
POSE_MODEL_COMPLEXITY=1
SCENE_CONFIDENCE_THRESHOLD=0.4
AUDIO_CONFIDENCE_THRESHOLD=0.8
